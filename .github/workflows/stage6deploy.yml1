name: Python App CI/CD Pipeline with Direct Deployment

on:
  push:
    branches:
      - main

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest

    steps:
    # Checkout the repository
    - name: Checkout code
      uses: actions/checkout@v4

    # Set up Python environment
    - name: Set up Python
      uses: actions/setup-python@v5
      with:
        python-version: '3.11'
        cache: 'pip'  

    # Install dependencies
    - name: Install dependencies
      run: |
        pip install -r requirements.txt

    # Run tests
    - name: Run tests
      run: |
        echo "Run tests"

    # Login to Azure
    - name: Azure Login
      uses: azure/login@v2.2.0
      with:
        creds: ${{ secrets.AZURE_CREDENTIALS }}

    # Update the VM with secure token passing
    - name: Azure VM Update
      run: | 
         echo '{"commandToExecute": "bash -c \"export GITHUB_TOKEN=${{ secrets.TOKEN }} && sudo -u azureuser bash /home/azureuser/chatbot-project/update_app.sh\""}' > protected-settings.json
         az vm extension set --resource-group "${{ secrets.RESOURCE_GROUP }}" --vm-name "${{ secrets.VM_NAME }}" --name "CustomScript" --publisher "Microsoft.Azure.Extensions" --force-update --settings '{"fileUris": []}' --protected-settings protected-settings.json
